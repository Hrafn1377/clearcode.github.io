{
  "name": "clearcode-desktop",
  "productName": "ClearCode",
  "version": "1.0.0",
  "description": "An accessibility-focused code editor for developers with visual needs",
  "main": "main.js",
  "author": {
    "name": "J. Harmon",
    "email": "hrafn1377@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/your-username/clearcode",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/clearcode.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/clearcode/issues"
  },
  "keywords": [
    "accessibility",
    "code-editor",
    "dyslexia-friendly",
    "colorblind-accessible",
    "text-to-speech",
    "electron",
    "desktop-app"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.clearcode.app",
    "productName": "ClearCode",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "style.css",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "ClearCode"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ClearCode",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "license": "LICENSE.txt"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "resources/icon.icns",
      "backgroundColor": "#1e1e1e",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 144,
          "y": 180,
          "type": "file"
        },
        {
          "x": 396,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icons",
      "category": "Development",
      "desktop": {
        "Name": "ClearCode",
        "Comment": "Accessible Code Editor",
        "Categories": "Development;IDE;TextEditor;Accessibility"
      }
    },
    "snap": {
      "confinement": "classic",
      "grade": "stable"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "hrafn1377",
      "repo": "clearcode"
    }
  }
}